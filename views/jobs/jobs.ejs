<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Jobs</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Custom Styles */
        .job {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="mt-5 mb-4">React Jobs in India</h1>
        <% jobs.forEach(job => { %>
            <div class="card job">
                <div class="card-body">
                    <h5 class="card-title"><%= job.title %></h5>
                    <h6 class="card-subtitle mb-2 text-muted"><%= job.company %></h6>
                    <p class="card-text">Location: <%= job.location %></p>
                    <a href="<%= job.url %>" class="card-link btn btn-primary" target="_blank">Apply</a>
                </div>
            </div>
        <% }); %>
    </div>
</body>
</html>
