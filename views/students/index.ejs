<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Students List</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <a href="/students/add" class="btn btn-primary">Add Student Details</a>
                <div class="card">
                    <div class="card-header bg-primary text-white">Students List</div>
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>College</th>
                                    <th>Status</th>
                                    <th>DSA</th>
                                    <th>WebD</th>
                                    <th>React</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% students.forEach(function(student) { %>
                                    <tr>
                                        <td><%= student.name %></td>
                                        <td><%= student.college %></td>
                                        <td><%= student.status %></td>
                                        <td><%= student.DSAFinalScore %></td>
                                        <td><%= student.WebDFinalScore %></td>
                                        <td><%= student.ReactFinalScore %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
